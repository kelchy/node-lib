    "bitsyntax": "^0.1.0",
    "buffer-more-ints": "^1.0.0",
    "promise-breaker": "^5.0.0",
    "url-parse": "^1.5.3"
  },
  "devDependencies": {
    "@kelchy/pre-commit": "^1.2.4",
    "amqplib-mocks": "^1.3.0",
    "eslint": "^7.24.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "jest": "^26.6.3"
  }
